<div class="container">
	<div class="row">
	<div class="col-xs-2"></div>
		<div class="col-md-8 col-sm-8 col-xs-12">
		<h2>Contact Us</h2>

		<%= form_for :contact, url: contacts_path do |f| %>
			<% if @contact && @contact.errors.any? %>
			<p>
				<ul>
				<% @contact.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
			</p>
			<% end %>

			<p>
				<%= f.label :email %> </br>
				<%= f.text_field :email %>		
			</p>
			<p>
				<%= f.label :message %> </br>
				<%= f.text_area :message, class: "form-control", rows: "6", style: "width: 400px" %>		
			</p>
			<p>
				<%= f.submit "Send message", class: "btn btn-success" %>
			</p>
		<% end %>
		</div>
	</div>
</div>