<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <script data-require="bootstrap@*" data-semver="3.3.6" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.js"></script>
  <link data-require="bootstrap-css@*" data-semver="3.3.6" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://code.jquery.com/jquery-2.1.3.js"></script>
  <script src="js/bootstrap.js"></script>
</head>
<body>
<div class="container">

			<!-- Static navbar -->
			<nav class="navbar navbar-default" role="navigation">
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			      <span class="sr-only">Toggle navigation</span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>			      
			    </button>
			    <a class="navbar-brand" href="/"><b><font color= #714311 >Alex's Blog</font></b>

			    </a>
			  </div>
			  <div class="navbar-collapse collapse in" id="bs-example-navbar-collapse-1" > 
				<ul class="nav navbar-nav">
					<li><%= link_to 'Posts', articles_path %><li>
					<% if user_signed_in? %>
						<li><%= link_to 'New', new_article_path %><li>
					<% end %>
					<li><%= link_to 'Terms', terms_path %><li>
					<li><%= link_to 'Contacts', contacts_path %><li>
					<li><%= link_to 'About', about_path %><li>	
			    </ul>
			    <ul class="nav navbar-nav navbar-right" >
			       	<li>
			       	<% if user_signed_in? %>
						 <a href="#"><%= current_user.username %></a>
          				</li>
         			 	<li>
            			<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
					<% else %>
						<%= link_to 'Sign In',  new_user_session_path %>
					<% end %>
					</li>
					</ul>
			  </div>
			</nav>
<%if @error && @error.length > 0 then %>
	<div class="alert alert-danger"><%=@error%></div>
<% end %>
<%if alert  then %>
	<div class="alert alert-danger"><%= alert%></div>
<% end %>
<%if notice then %>
	<div class="alert alert-success"><%= notice %></div>
<% end %>
<%= yield %>
</body>
</html>


