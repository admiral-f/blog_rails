<div class="container">
	<div class="row">
	<div class="col-xs-2"></div>
		<div class="col-md-8 col-sm-8 col-xs-12">
<h2><%= t('articles.article_index') %></h2>
<% @articles.each do |article| %>
	<div class="bs-callout bs-callout-success">	
	<h4><%= link_to article.title,article_path(article) %> by <%= article.author %></h4>
	<hr>
	 <%= truncate(article.text, length: 250) %>
	<hr>
	<div class="navbar-right">

		<%= link_to "#{article.comments.count} Comments", article_path(article) %> |                             
		<span class="glyphicon glyphicon-time"></span> <%= article.created_at %>
		<% if user_signed_in? %>
			<% if current_user.username==article.author %>
			 | <%= link_to 'edit',edit_article_path(article) %>
			<% end %> 
		<% end %>                         
	</div>
	</div>

<% end %>
</div>
</div>
<center>
<div class="pagination" style="color:green">
	<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
</center>
</div>
