<h1><%= @article.title %></h1>
</br>
<p>
	<%= @article.text %>
<p>
<hr>
<h2>Comments:</h2>
<% @article.comments.each do |comment| %>	
	<p><b><%= comment.author %>: </b>
		<i><%= comment.body %></i>
	</p>
	</br>	
<% end %>
<hr>
<%= form_for([@article, @article.comments.build]) do |f|  %>
	<p>
		<%= f.label :body %> </br>
		<%= f.text_area :body %>		
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
